{
  "version": "0.2.0",
  "configurations": [
    // 1) Launch your Blazor client via `dotnet run`
    {
      "name": "Run Blazor Client",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/GameEditor.Client/GameEditor.Client.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },

    // 2) Launch Chrome and attach its debugger to localhost:5096
    {
      "name": "Debug in Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5096",
      "webRoot": "${workspaceFolder}/GameEditor.Client",
      "breakOnLoad": true
    }
  ],

  // Compound lets you run both configs together with one ‚ÄúPlay‚Äù
  "compounds": [
    {
      "name": "Blazor WASM üîó Debug",
      "configurations": [
        "Run Blazor Client",
        "Debug in Chrome"
      ]
    }
  ]
}
